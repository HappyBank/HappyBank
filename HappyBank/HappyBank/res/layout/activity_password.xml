<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgoundColor"
    android:orientation="vertical" >
    
      <RelativeLayout
        android:layout_width="fill_parent"
         android:layout_height="?attr/titleBarHeight"
        android:background="@drawable/setting_titlebar"
        android:gravity="center_vertical" >  
        
        <ImageButton
          android:id="@+id/title_btn"
          android:layout_width="67dp"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_marginRight="5dp"
          android:background="@null"
          android:src="@drawable/setting_back" />
         
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="密码设置"
            android:textColor="#ffffff"
            android:textSize="30sp" />  
    </RelativeLayout>  

      <LinearLayout  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:gravity="center_vertical"  
            android:orientation="vertical"  
            android:paddingBottom="60.0dip"  
            android:paddingLeft="10.0dip"  
            android:paddingRight="10.0dip"  
            android:paddingTop="10.0dip" 
            >  
            
            <LinearLayout  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content" 
                >  
  
                <TableLayout  
                    android:id="@+id/MorePageTableLayout_Follow"  
                    android:layout_width="fill_parent"  
                    android:layout_height="wrap_content"  
                    android:paddingLeft="1.0dip"  
                    android:shrinkColumns="0"  
                    android:stretchColumns="0" >

                    <TableRow
                        android:id="@+id/password_table_row1"
                        android:layout_width="fill_parent"
                        android:layout_height="40px"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/table_row_pic"
                        android:paddingBottom="20.0dip"
                        android:paddingTop="20.0dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="修改密码"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:gravity="center_vertical"
                            android:paddingRight="20.0dip"
                            android:src="@drawable/setting_arrow" />
                    </TableRow>
  
                    <TableRow  
                        android:id="@+id/password_table_row2"  
                        android:layout_width="fill_parent"  
                        android:layout_marginLeft="2.0dip"  
                        android:layout_marginRight="2.0dip"  
                        android:background="@drawable/table_row_pic"
                        android:paddingBottom="20.0dip"  
                        android:paddingTop="20.0dip" 
                        android:layout_marginTop="3dip">  
  
                        <TextView  
                            android:layout_width="wrap_content"  
                            android:layout_height="fill_parent"  
                            
                            android:drawablePadding="10.0dip"  
                            android:gravity="center_vertical"  
                            android:includeFontPadding="false"  
                            android:paddingLeft="17.0dip"  
                            android:text="修改手势密码" 
                            android:textColor="#ff333333"  
                            android:textSize="16.0sp" />  
  
                        <ImageView  
                            android:layout_width="wrap_content"  
                            android:layout_height="fill_parent"  
                            android:layout_gravity="right"  
                            android:gravity="center_vertical"  
                            android:paddingRight="20.0dip"  
                            android:src="@drawable/setting_arrow"/>  
                    </TableRow>                    
                </TableLayout>  
            </LinearLayout>  
        </LinearLayout>  
</LinearLayout>