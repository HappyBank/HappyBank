<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="?attr/backgoundColor"
    	android:orientation="vertical">
    
      <RelativeLayout
        android:layout_width="fill_parent"
         android:layout_height="?attr/titleBarHeight"
        android:background="@drawable/setting_titlebar"
        android:gravity="center_vertical" >  
        
        <LinearLayout
        android:id="@+id/title_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageButton
          android:layout_width="20dip"
          android:layout_height="25dip"
          android:scaleType="fitXY"
          android:paddingLeft="10dip"
          android:background="@null"
          android:src="@drawable/setting_back" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="20sp" /> 
   	</LinearLayout>
         
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="主题设置"
            android:textColor="#ffffff"
            android:textSize="30sp" />  
    </RelativeLayout>  

      <LinearLayout  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:gravity="center_vertical"  
            android:orientation="vertical"  
            android:paddingBottom="10.0dip"  
            android:paddingLeft="10.0dip"  
            android:paddingRight="10.0dip"  
            android:paddingTop="10.0dip" 
            >  
            
          <TextView  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content"  
                android:layout_marginBottom="10.0dip"  
                android:layout_marginTop="10.0dip"  
                android:gravity="center_vertical"  
                android:paddingLeft="4.0dip"  
                android:text="点击名称进行预览"  
                android:textColor="#ff888888"  
                android:textSize="16.0sp" /> 
          
            <LinearLayout  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content" 
                >  
  
                <TableLayout  
                    android:id="@+id/MorePageTableLayout_Follow"  
                    android:layout_width="fill_parent"  
                    android:layout_height="wrap_content"  
                    android:paddingLeft="1.0dip"  
                    android:shrinkColumns="0"  
                    android:stretchColumns="0" >  
  
                    <TableRow  
                        android:layout_width="fill_parent"  
                        android:layout_height="40px"
                        android:background="@drawable/table_row_pic"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="2.0dip"  
                        android:layout_marginRight="2.0dip"  
                        android:paddingBottom="20.0dip"  
                        android:paddingTop="20.0dip" >  
  
                        <TextView  
                            android:id="@+id/setting_text_row1" 
                            android:layout_width="wrap_content"  
                            android:layout_height="fill_parent"  
                            android:gravity="center_vertical"
                            android:drawablePadding="10.0dip"  
                            android:includeFontPadding="false"  
                            android:paddingLeft="20.0dip"  
                            android:text="日间模式"  
                            android:textColor="#333333"  
                            android:textSize="16.0sp" />
                        
                        <Button 
                            android:id="@+id/theme_1_button"
                            android:layout_width="wrap_content"  
                            android:layout_height="wrap_content" 
                            android:paddingLeft="15dip"
                            android:paddingRight="10dip" 
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/theme_choose_btn_bg"
                            android:text="应用中"
                            />
  
                    </TableRow>  
  
                    <TableRow  
                        android:layout_width="fill_parent"  
                        android:layout_height="40px"
                        android:background="@drawable/table_row_pic"
                        android:layout_marginLeft="2.0dip"  
                        android:layout_marginRight="2.0dip"  
                        android:paddingBottom="20.0dip"  
                        android:paddingTop="20.0dip" 
                        android:layout_marginTop="3dip">  
  
                        <TextView  
                            android:id="@+id/setting_text_row2" 
                            android:layout_width="wrap_content"  
                            android:layout_height="fill_parent"  
                            android:drawablePadding="10.0dip"  
                            android:gravity="center_vertical"  
                            android:includeFontPadding="false"  
                            android:paddingLeft="20.0dip"  
                            android:text="夜间模式" 
                            android:textColor="#333333"  
                            android:textSize="16.0sp" /> 
                            
                        <Button 
                            android:id="@+id/theme_2_button"
                            android:layout_width="wrap_content"  
                            android:layout_height="wrap_content" 
                            android:paddingLeft="15dip"
                            android:paddingRight="10dip"
                            android:layout_gravity="center_vertical" 
                            android:background="@drawable/theme_choose_btn_bg"
                            android:text="选择"
                            />
                            
                    </TableRow>                    
                </TableLayout>  
            </LinearLayout> 
            
            <TextView  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content"  
                android:layout_marginBottom="10.0dip"  
                android:layout_marginTop="10.0dip"  
                android:gravity="center_vertical"  
                android:paddingLeft="4.0dip"  
                android:text="预览效果"  
                android:textColor="#ff888888"  
                android:textSize="16.0sp" /> 
            
            <LinearLayout  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content" 
                android:gravity="center_horizontal"
                >  
                <ImageView 
                   android:id="@+id/setting_theme_preview"
                   android:scaleType="fitXY"
                   android:layout_width="wrap_content"  
                   android:layout_height="wrap_content"  
                   />
                
            </LinearLayout>
            
        </LinearLayout>  
	</LinearLayout>
</LinearLayout>