<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgoundColor"
    android:orientation="vertical" 
    android:scrollbars="vertical">

   <RelativeLayout
        android:layout_width="fill_parent"
         android:layout_height="50dip"
        android:background="@drawable/setting_titlebar"
        android:gravity="center_vertical" >
        
        <LinearLayout
        android:id="@+id/depositinfo_title1_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageButton
          android:layout_width="20dip"
          android:layout_height="25dip"
          android:scaleType="fitXY"
          android:paddingLeft="10dip"
          android:background="@null"
          android:src="@drawable/setting_back" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="20sp" /> 
   		</LinearLayout>

        <TextView
            android:id="@+id/depositinfo_title1_tv_title"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center"
            android:textColor="#ffffff"
            android:text="这里是存款的名称哦"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/depositinfo_title1_tv_allDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="122333"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/setting_titlebar"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/depositinfo_title2_image_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"/>

        <TextView
            android:text="记录时间"
            android:id="@+id/depositinfo_title2_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center"
            android:textSize="12sp" 
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/depositinfo_title2_btn_withdraw"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:background="@null"
            android:text="取款"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        
    </RelativeLayout>

    	<RelativeLayout
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:gravity="center_horizontal" >

    	    <com.happybank.service.BrandTextView
            	android:id="@+id/depositinfo_content_tv_content"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginLeft="15dp"
            	android:layout_marginRight="15dp"
            	android:layout_marginTop="15dip"
            	android:lineSpacingMultiplier="1.5"
            	android:maxLines="10"
           	 	android:text="隔户杨柳弱袅袅。恰似十五女儿腰。\n老夫聊发少年狂，左牵黄，右擎苍。时候"
            	android:textSize="20sp" 
            	android:textColor="?attr/bankTextColor"/>
    	    
    	    <ImageView
            	android:id="@+id/depositinfo_content_image_picture"
            	android:layout_below="@id/depositinfo_content_tv_content"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:background="@null"
            	android:layout_marginTop="10dp"
            	android:layout_marginLeft="2dp"
            	android:layout_marginRight="2dp"
            	android:contentDescription="图片未能显示" />

    	    <ImageButton
    	        android:id="@+id/soup_btn_share"
    	        android:layout_width="40dp"
    	        android:layout_height="40dp"
    	        android:layout_alignParentBottom="true"
    	        android:layout_alignParentRight="true"
    	        android:layout_marginBottom="19dp"
    	        android:layout_marginRight="15dp"
    	        android:background="@null"
    	        android:contentDescription="Share"
    	        android:gravity="center|right"
    	        android:scaleType="fitXY"
    	        android:src="@drawable/share_btn_pic" />

    	</RelativeLayout>

</LinearLayout>