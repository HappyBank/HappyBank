<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="#1c86ee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hb.InputPasswordActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/delete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/delete_selector"
        android:onClick="del"
        android:visibility="gone" />

	<LinearLayout
	    android:id="@+id/password_input_filed"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:layout_alignParentBottom="true"
	    android:layout_marginLeft="25dip"
	    android:layout_marginRight="25dip" >
        
	    <RelativeLayout
	        android:id="@+id/k_layout1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="25dp" >

	        <Button
	            android:id="@+id/one"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:paddingLeft="2dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:onClick="one"
	            android:text="1"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/three"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:paddingLeft="2dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:onClick="three"
	            android:text="3"
	             android:textColor="#ffffff"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/tow"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:paddingLeft="2dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="tow"
	            android:text="2"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/k_layout2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="25dp" >

	        <Button
	            android:id="@+id/four"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:paddingLeft="2dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:onClick="four"
	            android:text="4"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/six"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:paddingLeft="2dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:onClick="six"
	            android:text="6"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/five"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:paddingLeft="2dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="five"
	            android:text="5"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />
	    </RelativeLayout>

	    <RelativeLayout
	        android:id="@+id/k_layout3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="25dp" >

	        <Button
	            android:id="@+id/seven"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:onClick="seven"
	            android:text="7"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/nine"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:onClick="nine"
	            android:text="9"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/eight"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:paddingLeft="2dp"
	            android:paddingTop="2dp"
	            android:paddingRight="2dp"
	            android:paddingBottom="2dp"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="eight"
	            android:text="8"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/k_layout4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true">
	        
	        <Button
	            android:id="@+id/zero"
	            android:background="@drawable/bg_passwordinput_btn"
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="zero"
	            android:text="0"
	            android:textColor="#ffffff"
	            android:textSize="35sp" />

	    </RelativeLayout>

	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/passwordfild"
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:layout_above="@id/password_input_filed"
	    android:layout_alignLeft="@+id/password_input_filed"
	    android:layout_alignRight="@+id/password_input_filed"
	    android:paddingLeft="20dip" 
	    android:paddingRight="20dip"
	    android:layout_marginTop="35dp"
	    android:layout_marginBottom="35dp"
	    android:gravity="center_horizontal"
	    android:orientation="horizontal" >

        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <LinearLayout 
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <ImageView
                android:id="@+id/point1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" 
                android:visibility="gone"/>

        </RelativeLayout>
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/point2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" 
                android:visibility="gone"/>

        </RelativeLayout>
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/point3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

           <EditText
                android:id="@+id/password3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" 
                android:visibility="gone"/>


        </RelativeLayout>
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/point4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

            <EditText
                android:id="@+id/password4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" 
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

	<LinearLayout
	    android:id="@+id/relativeLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_above="@+id/passwordfild"
	    android:layout_alignParentLeft="true"
	    android:gravity="center" >

	    <TextView
	        android:id="@+id/tip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:layout_gravity="center"
	        android:text="请输入密码"
	        android:textColor="#ffffff"
	        android:textSize="26sp" />
	</LinearLayout>

</RelativeLayout>