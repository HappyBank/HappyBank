<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hb.InputPasswordActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/passwordfild">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="请输入密码"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/delete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/delete_selector"
        android:onClick="del"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/passwordfild"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:orientation="horizontal" >

        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <LinearLayout 
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <ImageView
                android:id="@+id/point1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

        </RelativeLayout>
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/point2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

        </RelativeLayout>
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/point3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

            <EditText
                android:id="@+id/password3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" >

                <requestFocus />
            </EditText>

        </RelativeLayout>
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/point4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@drawable/point" />

            <EditText
                android:id="@+id/password4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blank"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

        </RelativeLayout>
    </LinearLayout>

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="280dp"
	    android:layout_alignLeft="@+id/passwordfild"
	    android:layout_below="@+id/passwordfild" >

	    <RelativeLayout
	        android:id="@+id/k_layout1"
	        android:layout_width="800dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="12dp" >

	        <Button
	            android:id="@+id/one"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="4dp"
	            android:onClick="one"
	            android:text="1"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/three"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginRight="4dp"
	            android:onClick="three"
	            android:text="3"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/tow"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="tow"
	            android:text="2"
	            android:textSize="35sp" />
	    </RelativeLayout>

	    <RelativeLayout
	        android:id="@+id/k_layout2"
	        android:layout_width="800dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/k_layout1"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="4dp" >

	        <Button
	            android:id="@+id/four"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="4dp"
	            android:onClick="four"
	            android:text="4"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/six"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginRight="4dp"
	            android:onClick="six"
	            android:text="6"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/five"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="five"
	            android:text="5"
	            android:textSize="35sp" />
	    </RelativeLayout>

	    <RelativeLayout
	        android:layout_width="800dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/k_layout2"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="4dp" >

	        <Button
	            android:id="@+id/seven"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="4dp"
	            android:onClick="seven"
	            android:text="7"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/nine"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginRight="4dp"
	            android:onClick="nine"
	            android:text="9"
	            android:textSize="35sp" />

	        <Button
	            android:id="@+id/eight"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="eight"
	            android:text="8"
	            android:textSize="35sp" />
	    </RelativeLayout>

	    <RelativeLayout
	        android:layout_width="800dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="4dp" >
	        
	        <Button
	            android:id="@+id/zero"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:onClick="zero"
	            android:text="0"
	            android:textSize="35sp" />

	    </RelativeLayout>
	</RelativeLayout>

</RelativeLayout>